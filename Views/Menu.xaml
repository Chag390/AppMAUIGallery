<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Menu"
             Title="Menu"
             BackgroundColor="#f3f3f3">
    <CollectionView x:Name="MenuCollection" IsGrouped="True">
        <CollectionView.Header>
            <VerticalStackLayout  Padding="20,0"  Spacing="10" >
                <Label 
                        Text="MAUI - Gallery"
                        Margin="30"
                        FontSize="24"
                        FontFamily="OpenSansSemibold"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center" />   
                <Label Text="Inicio">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnTapInicio"/>
                    </Label.GestureRecognizers>
                </Label>
                <Label Text="Extra"/>
                <Label Text="CrÃ©ditos"/>
            </VerticalStackLayout>
        </CollectionView.Header>
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                
                <Label  Margin="4,0" Text="{Binding Name}" FontAttributes="Bold"  />
               
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout  Padding="30,10">
                    <Label FontAttributes="Bold" Text="{Binding Title}" />
                    <Label Text="{Binding Description}" TextColor="{StaticResource Gray500}" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>

    </CollectionView>
</ContentPage>